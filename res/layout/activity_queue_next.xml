                    android:textColor="#a0a0a0"  />
                     <View
                    android:layout_width="1dp" 
                    android:layout_height="match_parent"
                    android:background="#d0d0d0"
                    android:layout_marginLeft="10dp"/>
                </LinearLayout>
                 <LinearLayout 
				    android:layout_weight="1"
