<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

 <!--    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" > -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 第一块 -->

            <LinearLayout
                android:id="@+id/queue_ly1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/search_sight_top"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/sbtn_around"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/blue_dot"
                        android:layout_gravity="center"
                        android:clickable="true" />

                    <TextView
                        android:id="@+id/book_order_tx1"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="16dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center|left"
                        android:text="附近"
                        android:textColor="@color/nw_bt_blue" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/search_sight_mid"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/sbtn_order"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
      
                        android:background="@drawable/gray_dot0"
                        android:layout_gravity="center"
                        android:clickable="true" />

                    <TextView
                        android:id="@+id/book_order_tx2"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="16dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center|left"
                        android:text="智能排序"
                        android:textColor="@color/nw_bg_black" />
                    
                     <TextView
                        android:id="@+id/book_order_tx21"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="10dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="排队人数"
                        android:background="@drawable/button_blue"
                        android:textColor="@color/nw_bg_white"
                        android:visibility="gone" />
                     
                     <TextView
                        android:id="@+id/book_order_tx22"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="10dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:background="@drawable/button_blue"
                        android:text="等待时间"
                        android:textColor="@color/nw_bg_white" 
                        android:visibility="gone"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/search_sight_bottom"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/sbtn_choose"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/gray_dot0"
                        android:layout_gravity="center"
                        android:clickable="true" />

                    <TextView
                        android:id="@+id/book_order_tx3"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="16dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center|left"
                        android:text="筛选"
                        android:textColor="@color/nw_bg_black" />
                    
                     <TextView
                        android:id="@+id/book_order_tx31"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="10dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/button_blue"
                        android:gravity="center"
                        android:text="景点"
                        android:textColor="@color/nw_bg_white" 
                        android:visibility="gone"/>
                     
                      <TextView
                        android:id="@+id/book_order_tx32"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="10dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/button_blue"
                        android:gravity="center"
                        android:text="娱乐"
                        android:textColor="@color/nw_bg_white"
                        android:visibility="gone" />
                      
                       <TextView
                        android:id="@+id/book_order_tx33"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="10dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/button_blue"
                        android:gravity="center"
                        android:text="美食"
                        android:textColor="@color/nw_bg_white" 
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>

            <!-- 第二块 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

			<View
			    android:layout_width="match_parent"
			    android:layout_marginTop="20dp"
			    android:layout_height="1dp"
			    android:background="#e0e0e0"/>
            <ListView
                android:id="@+id/search_lists"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
           <View
			    android:layout_width="match_parent"
			    android:layout_height="1dp"
			    android:background="#e0e0e0"/>
           </LinearLayout>
        </LinearLayout>
    <!-- </ScrollView>
 -->
</LinearLayout>