<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/search_image_item"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/search_tx_item1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="欢乐谷" 
            android:textColor="@color/nw_bt_blue"/>

        <TextView
            android:id="@+id/search_tx_item2"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="娱乐项目--距离90m" />

        <TextView
            android:id="@+id/search_tx_item3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="当前排队情况：30人  等待所需时间：30分钟" />
    </LinearLayout>

</LinearLayout>