<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp">
    <ImageView
        android:id="@+id/dengious_pic1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:background="@drawable/peopleofeachsight" />
    <ImageView
        android:id="@+id/dengious_pic2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/dengious" 
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/dengious_tex1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="警告：您已进入危险区域，请立即离开"
        android:textColor="@color/nw_bt_red"
        android:layout_gravity="center"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/dengious_pic3"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center|right"
        android:layout_marginTop="70dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/peopleofeachsubsight" 
        android:visibility="visible"/>
     </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="温馨提示：您可以根据图中实时排队人数，合理安排自己的游玩计划。祝您玩的开心！"
        android:textColor="@color/nw_bt_blue"
        android:background="@drawable/single_text_back"
        />
    <!-- <include layout="@layout/ui_search_bar" /> -->
</LinearLayout>