<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="horizontal" >

    <!-- <ImageView
        android:id="@+id/huanlegu_image_item"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/huanlegu"
        android:scaleType="centerCrop" /> -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/huanlegu_tx_item1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="欢乐谷" 
            android:textSize="13dp"
            android:textColor="@color/nw_bt_blue"/>

        <TextView
            android:id="@+id/huanlegu_tx_item2"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text="娱乐项目--距离90m" />

        <TextView
            android:id="@+id/huanlegu_tx_item3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="11dp"
            android:text="当前排队情况：30人  等待所需时间：30分钟" />
    </LinearLayout>
    <Button
        android:id="@+id/huanlegu_btn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"
        android:text="开始排队"
        android:textSize="12dp"
        android:background="@drawable/queueforone"
        android:textColor="#ffffff"/>

</LinearLayout>