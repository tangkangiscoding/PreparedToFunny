<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/ls_tx_item1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="天河欢乐汇影城" 
            android:textSize="14dp"
            android:textColor="@color/nw_bt_red"/>

        <TextView
            android:id="@+id/ls_tx_item2"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/nw_bt_blue"
            android:text="¥25起" />

        <TextView
            android:id="@+id/ls_tx_item3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="12dp"
            android:text="当前平均排队情况：30人  等待所需时间：15分钟" />
    </LinearLayout>

	<TextView
	    android:id="@+id/ls_tx_item4"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="20dp"
	    android:text="750m" />

</LinearLayout>