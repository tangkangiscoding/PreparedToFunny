<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<include layout="@layout/titlebar_return" />
	<FrameLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >

	    <ImageView
	        android:layout_width="match_parent"
	        android:layout_height="250dp"
	        android:background="@drawable/help_back1" />

	    <ImageButton
	        android:id="@+id/dialtosecure111"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:layout_gravity="center"
	        android:background="@drawable/help_real" />
	</FrameLayout>
	<LinearLayout
        android:id="@+id/sos_ly11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ly_sos11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_sight_top"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/sbtn_sos11"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/blue_dot"
                android:clickable="true" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:gravity="left|center"
                android:text="共享位置请求救援"
                android:textColor="@color/nw_bt_red"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/right_item" 
                android:visibility="invisible"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ly_sos31"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_sight_bottom"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/sbtn_sos31"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="top"
                android:layout_marginTop="5dp"
                android:background="@drawable/gray_dot0"
                android:clickable="true" />

            <TextView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:text="您现在正处于武汉欢乐谷激流勇进项目，您的坐标位置已发送至欢乐谷保安处。请您务必预留可拨打的手机号码。点击上面图片区域即刻拨通电话，请耐心冷静等待回复！"
                android:textColor="@color/nw_bg_black"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="top"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/right_item"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>